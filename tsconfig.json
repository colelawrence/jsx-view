{
  "extends": "./tsconfig-base.json",
  "compilerOptions": {
    "jsx": "react-jsxdev",
    "jsxImportSource": "jsx-view",
    "types": [
      "jest"
    ],
  },
  "references": [
    { "path": "./jsx-view" }
  ],
  "include": [
    "./tests/*.ts",
    "./tests/*.tsx",
    "./benches/*.ts",
    "./benches/**/*.ts",
    "./benches/*.tsx",
    "./benches/**/*.tsx",
    "./playground/*.ts",
    "./playground/**/*.ts",
    "./playground/*.tsx",
    "./playground/**/*.tsx",
    "./jsx-view/src/*.ts",
    "./jsx-view/src/**/*.ts",
    "./jsx-view/src/*.tsx",
    "./jsx-view/src/**/*.tsx"
  ],
  "exclude": [
    "./jsx-view/lib/*.ts",
    "./jsx-view/*.ts",
    "./jsx-view/lib/*.d.ts",
    "./jsx-view/*.d.ts"
  ]
}
