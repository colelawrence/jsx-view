{
  "extends": "./tsconfig-base.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "jsx-view",
    "types": [
      "jest"
    ]
  },
  "include": [
    "./*.ts",
    "./**/*.ts",
    "./*.tsx",
    "./**/*.tsx"
  ],
  "exclude": [
    "./jsx-view/lib/*.ts",
    "./jsx-view/*.ts"
  ]
}
