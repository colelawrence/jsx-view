{
  "extends": "../tsconfig-base.json",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": ".",
    "declaration": true,
    "declarationMap": true
  },
  "include": [
    "src/*.ts",
    "src/*.tsx",
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "src/*.spec.ts",
    "src/*.spec.tsx",
    "src/**/*.spec.ts",
    "src/**/*.spec.tsx"
  ]
}
